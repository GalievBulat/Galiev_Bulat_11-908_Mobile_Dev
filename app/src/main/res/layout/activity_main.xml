<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/backgr"
            tools:srcCompat="@drawable/backgr" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:foreground="@drawable/rect">

            <TextView
                android:id="@+id/tv_main_name"
                android:layout_width="240dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#673AB7"
                android:text="Kakadu Rf"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <Button
                android:id="@+id/bt_change_the_pr"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="144dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:shadowRadius="0"
                android:singleLine="true"
                android:text="Изменить профиль"
                android:textAllCaps="false"
                android:textColor="#707578"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050000012" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="\@kakadurf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_main_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Регистрация: март 2014"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_id"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/iv_icn3"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_subribes_n"
                app:layout_constraintEnd_toStartOf="@+id/tv_reg"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_reg"
                app:layout_constraintVertical_bias="0.050000012"
                app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

            <TextView
                android:id="@+id/tv_subribes_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_reg"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_subscribers_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_reads"
                app:layout_constraintTop_toBottomOf="@+id/tv_reg"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_reads"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Читает"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_subribes_n"
                app:layout_constraintTop_toBottomOf="@+id/tv_reg"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_readers"
                android:layout_width="64dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Читатели"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_subscribers_n"
                app:layout_constraintTop_toBottomOf="@+id/tv_reg"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_tweets"
                android:layout_width="58dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Твиты"
                android:textColor="#2c9fe2"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_subribes_n"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_tweets_answers"
                android:layout_width="126dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="Твиты и ответы"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_tweets"
                app:layout_constraintTop_toBottomOf="@+id/tv_subribes_n"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_likes54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="Нравится"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_media"
                app:layout_constraintTop_toBottomOf="@+id/tv_subribes_n"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_media"
                android:layout_width="54dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="Медиа"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toEndOf="@+id/tv_tweets_answers"
                app:layout_constraintTop_toBottomOf="@+id/tv_subribes_n"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#2c9fe2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_tweets"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tweets"
                app:srcCompat="@drawable/line" />

            <EditText
                android:id="@+id/et_setName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_main_name"
                app:layout_constraintTop_toTopOf="@+id/tv_main_name"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginBottom="56dp"
                android:text="ok"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/tv_reg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_user_id"
                app:layout_constraintTop_toBottomOf="@+id/tv_main_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_tweet"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:foreground="@drawable/rect">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="KakaduRf"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/tv_annot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" @kakadurf 5 дн."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_nick"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="я пашол в магазин"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.504" />

            <ImageView
                android:id="@+id/iv_repost"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_likr_post"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toEndOf="@+id/iv_comment"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_reposts_real" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_text"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_comments" />

            <ImageView
                android:id="@+id/iv_likr_post"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toEndOf="@+id/tv_text"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_likes" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@+id/iv_likr_post"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_share_24" />

            <ImageView
                android:id="@+id/iv_stat"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toEndOf="@+id/iv_share"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_insert_chart_outlined_24" />

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="26dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:text="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_repost"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_comment"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_reposts"
                android:layout_width="26dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:text="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_likr_post"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_repost"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_likes4"
                android:layout_width="26dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:text="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_share"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_likr_post"
                app:layout_constraintTop_toBottomOf="@+id/tv_text"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="24dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_stat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toEndOf="@+id/tv_annot"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.100000024"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_main_avatar"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ll_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@drawable/avatar"
        app:strokeColor="#FFFFFF"
        tools:srcCompat="@drawable/avatar" />

    <ImageView
        android:id="@+id/iv_back1"
        android:layout_width="58dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

    <ImageView
        android:id="@+id/iv_back2"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_main"
        app:layout_constraintEnd_toStartOf="@+id/ll_main"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_main"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/iv_more1"
        android:layout_width="62dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

    <ImageView
        android:id="@+id/iv_more2"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_main"
        app:layout_constraintEnd_toEndOf="@+id/iv_more1"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_main"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_more_vert_24"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>